#!/bin/bash

# Handle some arguments before running the application
# Supported arguments:
# -d|--debug: debug with -Wd arguments
DEBUG='-OO'
for ARG in $@; do
  case $ARG in
    -d|--debug)
      DEBUG='-Wd'
      ;;
    -n)
      ARGS="$ARGS $ARG"
    ;;
  *)
    # Unknown option
  esac
done

python3 ${DEBUG}  /usr/lib/solydxk/system/main.py $ARGS
